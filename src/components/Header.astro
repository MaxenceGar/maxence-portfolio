---
import "../styles/global.css";
---

<header class="sticky w-full bg-[#041E18] border border-white/10 text-white">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <img
        src="/icon/Logo-MG.svg"
        alt="Logo MonPortfolio"
        class="w-32 h-auto object-contain transition-transform duration-300 group-hover:scale-105"
      />
    </a>

    <!-- Navigation -->
    <nav class="flex items-center gap-8 font-title text-sm tracking-wide">
      <a
        href="/shopify"
        class="bg-green-max/20 px-4 py-2 rounded-lg bg-btn-max"
      >
        Shopify</a
      >
      <a
        href="/MaxenceGarandelCV.pdf"
        rel="nofollow"
        target="_blank"
        class="px-4 py-2 bg-green-max bg-btn-max text-[#041E18] font-medium rounded-full hover:bg-green-max/80 transition-all duration-200 lg:block hidden"
      >
        Mon CV
      </a>
      <span
        class="bg-brand-softer border border-green-max text-xs font-medium px-3.5 py-2 rounded-full flex items-center"
      >
        <span class="relative flex size-3 mr-3">
          <span
            class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-max opacity-75"
          ></span><span
            class="relative inline-flex size-3 rounded-full bg-green-max"
          ></span></span
        >
        Disponible</span
      >
    </nav>
  </div>
</header>
