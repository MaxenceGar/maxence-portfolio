---
/* Props optionnelles si tu veux en faire un composant r√©utilisable */
const {
  title = "Nom du projet",
  subtitle = "Description du projet ou tagline",
  color = "bg-white",
  image = "/public/images/omc-bento-website.png",
} = Astro.props;
---

<section class="relative h-screen">
  <!-- Bloc sticky -->
  <div class={`sticky top-0 h-screen flex flex-col justify-center items-center border-8 border-gray-500 rounded-2xl shadow-xl mx-6 transition-transform duration-500 ${color}`}>
    <div class="p-10 max-w-4xl text-center">
      <h2 class="text-3xl font-serif mb-4">{title}</h2>
      <p class="text-gray-700 mb-8">{subtitle}</p>

      <!-- Exemple de contenu (tu peux remplacer par ton grid ou images) -->
      <div class="grid grid-cols-3 gap-6">
        <img src={image} alt={title} class="object-cover rounded-xl h-48 w-full" />
        <img src={image} alt={title} class="object-cover rounded-xl h-48 w-full" />
        <img src={image} alt={title} class="object-cover rounded-xl h-48 w-full" />
      </div>
    </div>
  </div>
</section>
