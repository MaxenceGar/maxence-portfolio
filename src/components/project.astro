---
import { motion } from "framer-motion";

const projects = [
  {
    title: "Site Vitrine",
    category: "ID Postur",
    image: "/images/id-postur-website.webp", // Placeholder color
    tags: ["Tailwind", "Astro", "SEO"],
    link: "/id-postur",
  },
  {
    title: "E-commerce",
    category: "Énergie Fruit",
    image: "/images/energiefruit-website.webp", // Placeholder color
    tags: ["Liquid", "Custom Section", "Shopify", "SEO"],
    link: "/energie-fruit",
  },
  {
    title: "E-commerce",
    category: "Ohmycase",
    image: "/images/ohmycase-website.webp", // Placeholder color
    tags: ["Liquid", "Metafields", "SEO", "Design"],
    link: "#",
  },
];
---

<section id="projects" class="py-24 px-4 md:px-12 bg-green-max-dark font-title">
  <div class="container mx-auto">
    <div
      class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6 text-white"
    >
      <div>
        <h2 class="text-3xl md:text-5xl font-bold mb-4">Projets Récents</h2>
        <p class="max-w-xl">
          Une sélection de mes dernières réalisations en e-commerce et sites
          vitrines.
        </p>
      </div>
    </div>

    <motion.div
      className="grid md:grid-cols-3 gap-8"
      client:visible
      animate={{ scale: 1, opacity: 1 }}
      initial={{ scale: 0.8, opacity: 0 }}
      transition={{
        type: "spring",
        stiffness: 50, // Moins rigide
        damping: 20, // Amorti rapidement
        delay: 0.1, // Petit délai au chargement
      }}
    >
      {
        projects.map((project) => (
          <a href={project.link} class="group block cursor-pointer">
            <div class="group cursor-pointer bg-white rounded-2xl p-4">
              <div
                class={`aspect-[4/3] rounded-2xl mb-4 overflow-hidden relative 
                        ${project.image.startsWith("/") || project.image.startsWith("http") ? "" : project.image}
                      `}
              >
                <div class="absolute inset-0 bg-shopify-dark/0 group-hover:bg-shopify-dark/10 transition-colors duration-300" />

                {project.image.startsWith("/") ||
                project.image.startsWith("http") ? (
                  <img
                    src={project.image}
                    alt={project.title}
                    class="absolute inset-0 w-full h-full object-cover"
                  />
                ) : (
                  <div class="absolute inset-0 flex items-center justify-center text-shopify-dark/20 font-bold text-4xl">
                    {project.title}
                  </div>
                )}
              </div>

              <div class="flex items-center gap-3 mb-2">
                <span class="text-xs font-light tracking-wider uppercase text-green-max-dark">
                  {project.category}
                </span>
              </div>
              <h3 class="text-xl font-bold text-green-max-dark group-hover:text-shopify-green transition-colors">
                {project.title}
              </h3>
              <div class="flex gap-2 mt-3">
                {project.tags.map((tag) => (
                  <span class="text-xs text-gray-500 bg-linear-to-t from-gray-50 to-white-max/50 px-2 py-1 rounded border border-gray-100">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </a>
        ))
      }
    </motion.div>
  </div>
</section>
