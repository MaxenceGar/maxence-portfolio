---
import "../styles/global.css";
---

<section class="relative px-0 py-0 md:px-24 md:py-24" id="contact">

  <!-- SVG en haut à gauche -->
  <img 
    src="../icon/deco.svg" 
    alt="svg décoratif" 
    class="absolute top-10 left-10 w-20 h-20"
  />

  <!-- SVG en bas à droite -->
  <img 
    src="../icon/deco.svg" 
    alt="svg décoratif" 
    class="absolute bottom-10 right-10 w-20 h-20 rotate-180"
  />

  <!-- Bloc contact avec hover -->
  <div class="bg-white text-green-max-dark text-center py-24 rounded-lg 
              hover:scale-105 hover:rotate-2 delay-150 duration-300 ease-in-out">
    
    <h4 class="mb-12 text-7xl font-serif">Contactez-moi</h4>
    <a href="mailto:maxgarandel.pro@gmail.com" class="text-2xl font-medium inline-block truncate hover:underline">
      maxgarandel.pro@gmail.com
    </a>
  </div>

</section>



