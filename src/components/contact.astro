---
import "../styles/global.css";
---

<section class="relative px-0 py-0 md:px-24 md:py-24 bg-white" id="contact">

  <!-- SVG en haut à gauche -->
  <img 
    src="../icon/deco.svg" 
    alt="svg décoratif" 
    class="md:absolute md:top-10 md:left-10 md:w-20 md:h-20 hidden"
  />

  <!-- SVG en bas à droite -->
  <img 
    src="../icon/deco.svg" 
    alt="svg décoratif" 
    class="md:absolute md:bottom-10 md:right-10 md:w-20 md:h-20 md:rotate-180"
  />

  <!-- Bloc contact avec hover -->
  <div class="bg-green-max-dark text-white text-center py-24 rounded-lg 
              hover:scale-105 hover:rotate-2 delay-150 duration-300 ease-in-out">
    
    <h4 class="mb-12 text-7xl font-serif">Contactez-moi</h4>
    <a href="mailto:maxgarandel.pro@gmail.com" class="text-2xl font-medium inline-block truncate hover:underline">
      maxgarandel.pro@gmail.com
    </a>
  </div>

</section>



