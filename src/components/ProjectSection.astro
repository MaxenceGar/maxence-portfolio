---
import "../styles/global.css";

const {
  marque,
  presentation,
  description,
  tags = [],
  images = []
} = Astro.props;
---

<main class="md:pt-10">
  <section class="text-black md:pl-6 md:pr-6 relative">
    <div class="bg-linear-to-b from-[#284F46] to-white border-2 border-green-max rounded-2xl p-4 md:p-10 mx-auto top-0 relative">
      
      <!-- Titre -->
      <div class="md:flex justify-between items-center mb-6 relative">

        <h2 class="text-2xl font-serif mb-6">
          {marque} â€¢ <span class="font-title text-lg">{presentation}</span>
        </h2>

        <a href="https://tonsite.com"
   class="group relative inline-block font-title font-medium cursor-pointer p-[2px] rounded-2xl transition-all duration-300 active:scale-95 focus:outline-none">
  <span class="absolute inset-0 rounded-2xl bg-gradient-to-t from-[#041E18] to-[#264C43] opacity-80 group-hover:opacity-100 transition-opacity duration-300"></span>
  <span class="absolute inset-0 rounded-2xl blur-md bg-gradient-to-t from-[#041E18] to-[#264C43] opacity-40 group-hover:opacity-70 transition-opacity duration-300"></span>
  <span class="relative flex items-center justify-center gap-2 px-8 py-3 text-white text-lg rounded-xl bg-gradient-to-t from-[#264C43] to-[#041E18] shadow-[inset_0_1px_1px_rgba(255,255,255,0.2)] group-hover:translate-y-[-2px] transition-transform duration-300">
    Visiter
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </span>
</a>


      </div>

      <!-- Contenu principal -->
      <div class="md:grid md:grid-cols-2 gap-8 relative">

        <!-- Gauche -->
        <div class="flex flex-col">
          
          <!-- Tags -->
          <div class="flex flex-wrap gap-4 mb-6">
            {tags.map(tag => (
              <span class="bg-green-max rounded-2xl py-2 px-4 text-sm">
                {tag}
              </span>
            ))}
          </div>

          <!-- Description -->
          <p class="font-title text-left justify-center">
            {description}
          </p>
        </div>

        <!-- Droite : Images -->
        {images.length > 0 && (
          <div class="grid gap-4">
            {images.map(img => (
              <img
                src={img}
                alt={marque}
                class="mt-10 md:mt-0 object-cover object-top w-full h-96 rounded-xl border-2 border-gray-400/50"
              />
            ))}
          </div>
        )}
      </div>
    </div>
  </section>
</main>