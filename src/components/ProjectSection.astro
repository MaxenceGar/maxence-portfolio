---
import "../styles/global.css";

const {
  marque,
  presentation,
  description,
  tags = [],
  images = []
} = Astro.props;
---

<main class="md:pt-10">
  <section class="text-black md:pl-6 md:pr-6">
    <div class="bg-white border-2 border-green-max rounded-2xl p-4 md:p-10 mx-auto top-0">
      
      <!-- Titre -->
      <div class="md:flex justify-between items-center mb-6">
        <h2 class="text-2xl font-serif">
          {marque} â€¢ <span class="font-title text-lg">{presentation}</span>
        </h2>
        <button
  class="font-title font-medium relative cursor-pointer opacity-90 hover:opacity-100 transition-opacity p-[2px] bg-black rounded-[16px] bg-gradient-to-t from-[#041E18] to-[#01F9C0] active:scale-95"
>
  <span
    class="w-full h-full flex items-center gap-2 px-8 py-3 bg-[#B931FC] text-white rounded-[14px] bg-gradient-to-t from-[#01F9C0] to-[#041E18]"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-right-short -rotate-45" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"/>
</svg>Visiter</span
  >
</button>

      </div>

      <!-- Contenu principal -->
      <div class="md:grid md:grid-cols-2 gap-8">

        <!-- Gauche -->
        <div class="flex flex-col">
          
          <!-- Tags -->
          <div class="flex flex-wrap gap-4 mb-6">
            {tags.map(tag => (
              <span class="bg-green-max rounded-2xl py-2 px-4 text-sm">
                {tag}
              </span>
            ))}
          </div>

          <!-- Description -->
          <p class="font-title text-left justify-center">
            {description}
          </p>
        </div>

        <!-- Droite : Images -->
        {images.length > 0 && (
          <div class="grid gap-4">
            {images.map(img => (
              <img
                src={img}
                alt={marque}
                class="mt-10 md:mt-0 object-cover object-top w-full h-96 rounded-xl border-2 border-gray-400/50"
              />
            ))}
          </div>
        )}
      </div>
    </div>
  </section>
</main>